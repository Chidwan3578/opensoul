<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark theme colors matching Control UI base.css :root tokens -->

    <!-- Shell backgrounds -->
    <Color x:Key="ShellBgColor">#FF0F1117</Color>
    <Color x:Key="TitlebarColor">#FF161B22</Color>
    <Color x:Key="PanelColor">#FF1A1F28</Color>
    <Color x:Key="PanelStrongColor">#FF1F2630</Color>
    <Color x:Key="ElevatedColor">#FF242B35</Color>
    <Color x:Key="ChromeColor">#FF161B22</Color>

    <!-- Borders -->
    <Color x:Key="BorderColor">#FF2D333B</Color>
    <Color x:Key="BorderStrongColor">#FF444C56</Color>
    <Color x:Key="BorderHoverColor">#FF539BF5</Color>

    <!-- Text -->
    <Color x:Key="TextColor">#FFE6EDF3</Color>
    <Color x:Key="TextStrongColor">#FFFFFFFF</Color>
    <Color x:Key="MutedColor">#FF768390</Color>
    <Color x:Key="MutedStrongColor">#FF9DA7B3</Color>

    <!-- Accent -->
    <Color x:Key="AccentColor">#FFFF5C5C</Color>
    <Color x:Key="AccentHoverColor">#FFFF7070</Color>
    <Color x:Key="AccentMutedColor">#33FF5C5C</Color>

    <!-- Semantic -->
    <Color x:Key="SuccessColor">#FF3FB950</Color>
    <Color x:Key="WarningColor">#FFD29922</Color>
    <Color x:Key="DangerColor">#FFF85149</Color>
    <Color x:Key="InfoColor">#FF539BF5</Color>

    <!-- Focus -->
    <Color x:Key="FocusColor">#FF539BF5</Color>

    <!-- SolidColorBrush wrappers -->
    <SolidColorBrush x:Key="ShellBgBrush" Color="{StaticResource ShellBgColor}" />
    <SolidColorBrush x:Key="TitlebarBrush" Color="{StaticResource TitlebarColor}" />
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
    <SolidColorBrush x:Key="PanelStrongBrush" Color="{StaticResource PanelStrongColor}" />
    <SolidColorBrush x:Key="ElevatedBrush" Color="{StaticResource ElevatedColor}" />
    <SolidColorBrush x:Key="ChromeBrush" Color="{StaticResource ChromeColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderStrongBrush" Color="{StaticResource BorderStrongColor}" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="TextStrongBrush" Color="{StaticResource TextStrongColor}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}" />
    <SolidColorBrush x:Key="MutedStrongBrush" Color="{StaticResource MutedStrongColor}" />

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="AccentMutedBrush" Color="{StaticResource AccentMutedColor}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}" />

    <!-- Window close button hover (red for close) -->
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#FFC42B1C" />
    <SolidColorBrush x:Key="CloseButtonHoverForeground" Color="#FFFFFFFF" />

    <!-- Window button hover (lighter panel) -->
    <SolidColorBrush x:Key="WindowButtonHoverBrush" Color="#33FFFFFF" />

</ResourceDictionary>
