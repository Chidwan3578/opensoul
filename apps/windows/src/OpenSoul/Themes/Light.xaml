<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light theme colors matching Control UI base.css :root[data-theme="light"] tokens -->

    <!-- Shell backgrounds -->
    <Color x:Key="ShellBgColor">#FFFFFFFF</Color>
    <Color x:Key="TitlebarColor">#FFF6F8FA</Color>
    <Color x:Key="PanelColor">#FFFFFFFF</Color>
    <Color x:Key="PanelStrongColor">#FFF6F8FA</Color>
    <Color x:Key="ElevatedColor">#FFFFFFFF</Color>
    <Color x:Key="ChromeColor">#FFF6F8FA</Color>

    <!-- Borders -->
    <Color x:Key="BorderColor">#FFD1D9E0</Color>
    <Color x:Key="BorderStrongColor">#FFB0B8C1</Color>
    <Color x:Key="BorderHoverColor">#FF0969DA</Color>

    <!-- Text -->
    <Color x:Key="TextColor">#FF1F2328</Color>
    <Color x:Key="TextStrongColor">#FF000000</Color>
    <Color x:Key="MutedColor">#FF656D76</Color>
    <Color x:Key="MutedStrongColor">#FF424A53</Color>

    <!-- Accent -->
    <Color x:Key="AccentColor">#FFDC2626</Color>
    <Color x:Key="AccentHoverColor">#FFB91C1C</Color>
    <Color x:Key="AccentMutedColor">#1ADC2626</Color>

    <!-- Semantic -->
    <Color x:Key="SuccessColor">#FF1A7F37</Color>
    <Color x:Key="WarningColor">#FF9A6700</Color>
    <Color x:Key="DangerColor">#FFCF222E</Color>
    <Color x:Key="InfoColor">#FF0969DA</Color>

    <!-- Focus -->
    <Color x:Key="FocusColor">#FF0969DA</Color>

    <!-- SolidColorBrush wrappers -->
    <SolidColorBrush x:Key="ShellBgBrush" Color="{StaticResource ShellBgColor}" />
    <SolidColorBrush x:Key="TitlebarBrush" Color="{StaticResource TitlebarColor}" />
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
    <SolidColorBrush x:Key="PanelStrongBrush" Color="{StaticResource PanelStrongColor}" />
    <SolidColorBrush x:Key="ElevatedBrush" Color="{StaticResource ElevatedColor}" />
    <SolidColorBrush x:Key="ChromeBrush" Color="{StaticResource ChromeColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderStrongBrush" Color="{StaticResource BorderStrongColor}" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="TextStrongBrush" Color="{StaticResource TextStrongColor}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}" />
    <SolidColorBrush x:Key="MutedStrongBrush" Color="{StaticResource MutedStrongColor}" />

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="AccentMutedBrush" Color="{StaticResource AccentMutedColor}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}" />

    <!-- Window close button hover -->
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#FFC42B1C" />
    <SolidColorBrush x:Key="CloseButtonHoverForeground" Color="#FFFFFFFF" />

    <!-- Window button hover (darker for light theme) -->
    <SolidColorBrush x:Key="WindowButtonHoverBrush" Color="#0D000000" />

</ResourceDictionary>
