<Window x:Class="OpenSoul.Windows.ExecApprovalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenSoul - Command Approval"
        Width="520"
        Height="Auto"
        SizeToContent="Height"
        MaxHeight="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource PanelBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="0"
            Effect="{StaticResource DialogShadow}">

        <Border.Resources>
            <DropShadowEffect x:Key="DialogShadow"
                              BlurRadius="24"
                              ShadowDepth="8"
                              Direction="270"
                              Opacity="0.4"
                              Color="Black" />
        </Border.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="Auto" />
                <!-- Content -->
                <RowDefinition Height="Auto" />
                <!-- Actions -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="24,20,24,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="⚠"
                                   FontSize="20"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Command Approval"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI Variable Display, Segoe UI"
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="A command is requesting execution approval."
                               FontSize="13"
                               FontFamily="Segoe UI Variable Text, Segoe UI"
                               Foreground="{DynamicResource MutedBrush}" />
                </StackPanel>
            </Border>

            <!-- Command details -->
            <Border Grid.Row="1" Padding="24,16">
                <Border Background="{DynamicResource ShellBgBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16,12">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Command"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <TextBlock x:Name="CommandText"
                                       Text="(unknown command)"
                                       FontSize="13"
                                       FontFamily="Cascadia Mono, Consolas"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       MaxHeight="80" />
                        </StackPanel>

                        <StackPanel x:Name="CwdPanel" Margin="0,0,0,8" Visibility="Collapsed">
                            <TextBlock Text="Working Directory"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <TextBlock x:Name="CwdText"
                                       FontSize="13"
                                       FontFamily="Cascadia Mono, Consolas"
                                       Foreground="{DynamicResource MutedStrongBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <StackPanel x:Name="ReasonPanel" Margin="0,0,0,8" Visibility="Collapsed">
                            <TextBlock Text="Reason"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <TextBlock x:Name="ReasonText"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <StackPanel x:Name="RiskPanel" Visibility="Collapsed">
                            <TextBlock Text="Risk Level"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="RiskDot"
                                         Width="8" Height="8"
                                         Fill="{DynamicResource WarningBrush}"
                                         Margin="0,0,6,0"
                                         VerticalAlignment="Center" />
                                <TextBlock x:Name="RiskText"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>

            <!-- Actions -->
            <Border Grid.Row="2"
                    Padding="24,0,24,20">
                <StackPanel>
                    <CheckBox x:Name="RememberCheckBox"
                              Content="Remember this decision for similar commands"
                              FontSize="13"
                              FontFamily="Segoe UI Variable Text, Segoe UI"
                              Foreground="{DynamicResource MutedBrush}"
                              Margin="0,0,0,16" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                x:Name="RejectButton"
                                Content="Reject"
                                Height="40"
                                FontSize="14"
                                FontFamily="Segoe UI Variable Text, Segoe UI"
                                Foreground="{DynamicResource TextBrush}"
                                Cursor="Hand"
                                Click="RejectButton_Click"
                                IsDefault="False">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bg"
                                            Background="{DynamicResource PanelStrongBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="16,8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bg" Property="Background"
                                                    Value="{DynamicResource ElevatedBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
                                x:Name="ApproveButton"
                                Content="✓ Approve and Execute"
                                Height="40"
                                FontSize="14"
                                FontFamily="Segoe UI Variable Text, Segoe UI"
                                Foreground="White"
                                Cursor="Hand"
                                Click="ApproveButton_Click"
                                IsDefault="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bg"
                                            Background="{DynamicResource AccentBrush}"
                                            CornerRadius="8"
                                            Padding="16,8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bg" Property="Background"
                                                    Value="{DynamicResource AccentHoverBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
