<Window x:Class="OpenSoul.Windows.DevicePairingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenSoul - Device Pairing"
        Width="480"
        Height="Auto"
        SizeToContent="Height"
        MaxHeight="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource PanelBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="0"
            Effect="{StaticResource DialogShadow}">

        <Border.Resources>
            <DropShadowEffect x:Key="DialogShadow"
                              BlurRadius="24"
                              ShadowDepth="8"
                              Direction="270"
                              Opacity="0.4"
                              Color="Black" />
        </Border.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="24,20,24,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ”—"
                                   FontSize="20"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Device Pairing Request"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI Variable Display, Segoe UI"
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="A new device wants to pair with your node."
                               FontSize="13"
                               FontFamily="Segoe UI Variable Text, Segoe UI"
                               Foreground="{DynamicResource MutedBrush}" />
                </StackPanel>
            </Border>

            <!-- Device details -->
            <Border Grid.Row="1" Padding="24,16">
                <Border Background="{DynamicResource ShellBgBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16,12">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Device"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <TextBlock x:Name="DeviceNameText"
                                       Text="Unknown Device"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" />
                        </StackPanel>

                        <StackPanel x:Name="PlatformPanel" Margin="0,0,0,8" Visibility="Collapsed">
                            <TextBlock Text="Platform"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <TextBlock x:Name="PlatformText"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}" />
                        </StackPanel>

                        <StackPanel x:Name="IpPanel" Visibility="Collapsed">
                            <TextBlock Text="IP Address"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MutedBrush}"
                                       Margin="0,0,0,4" />
                            <TextBlock x:Name="IpText"
                                       FontSize="13"
                                       FontFamily="Cascadia Mono, Consolas"
                                       Foreground="{DynamicResource MutedStrongBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>

            <!-- Actions -->
            <Border Grid.Row="2" Padding="24,0,24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="12" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="RejectButton"
                            Content="Reject"
                            Height="40"
                            FontSize="14"
                            FontFamily="Segoe UI Variable Text, Segoe UI"
                            Foreground="{DynamicResource TextBrush}"
                            Cursor="Hand"
                            Click="RejectButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bg"
                                        Background="{DynamicResource PanelStrongBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16,8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bg" Property="Background"
                                                Value="{DynamicResource ElevatedBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2"
                            x:Name="ApproveButton"
                            Content="âœ“ Approve Pairing"
                            Height="40"
                            FontSize="14"
                            FontFamily="Segoe UI Variable Text, Segoe UI"
                            Foreground="White"
                            Cursor="Hand"
                            Click="ApproveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bg"
                                        Background="{DynamicResource AccentBrush}"
                                        CornerRadius="8"
                                        Padding="16,8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bg" Property="Background"
                                                Value="{DynamicResource AccentHoverBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
